<h2>Lista de categorias:</h2>
<hr>
<a href='/admin/categorias/add'><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class = "card mt-4">
        <div class = "card-body">
            <div class = "row">
                <div class = "col-sm-6 offset-sm-2">
                    <h4>{{nome}}</h4>
                    <small>Slug: {{slug}}</small><br>
                    <small>Data de criação: {{date}}</small>
                </div>
                <div class = "col-sm-4">
                    <a href="/admin/categorias/edit/{{_id}}"><button class = "btn btn-success">Editar categoria</button></a>
                    <form action = '/admin/categorias/deletar' method = 'POST'>
                        <input type="hidden" name = "id" value = "{{_id}}">
                        <button class = "btn btn-danger mt-2">Deletar categoria</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <h4 class = "mt-4">Nenhuma categoria registrada</h4>
{{/each}}